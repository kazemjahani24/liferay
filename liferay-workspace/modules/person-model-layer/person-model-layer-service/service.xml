<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder dependency-injector="ds" package-path="org.liferayasif.person">
	<namespace>FOO</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" name="Person" remote-service="false" uuid="true">

		<!-- PK fields -->
		<column name="personId" primary="true" type="long" />
	
		<column name="name" type="String" />
		<column name="age" type="int" />
		<column name="gender" type="String" />
		<column name="emailId" type="String" />
		<column name="nationality" type="String" />
		<column name="occupation" type="String" />
	</entity>

</service-builder>